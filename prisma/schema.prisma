// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id           Int       @id() @default(autoincrement())
    fname        String?
    lname        String?
    email        String?
    phone_number String?
    profile_url  String?
    score        Int?
    last_login   DateTime?
    deviceToken  String?   @default("no-token")
    createdAt    DateTime  @default(now())
    updatedAt    DateTime  @updatedAt

    @@fulltext([fname])
    @@fulltext([lname])
    @@fulltext([email])
    @@fulltext([phone_number])
    @@fulltext([fname, lname])
    @@fulltext([fname, email])
    @@fulltext([fname, phone_number])
    @@fulltext([lname, email])
    @@fulltext([lname, phone_number])
    @@fulltext([email, phone_number])
    @@fulltext([fname, lname, email])
    @@fulltext([fname, lname, phone_number])
    @@fulltext([fname, email, phone_number])
    @@fulltext([lname, email, phone_number])
    @@fulltext([fname, lname, email, phone_number])
}

model AppInfo {
    id                Int    @id() @default(autoincrement())
    appVersionName    String
    appVersionNumber  Int
    currentAction     String
    appNewFeature     String
    updateUrl         String
    resourceType      String
    noticeMessage     String
    noticeMessageType String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Book {
    id        Int      @id() @default(autoincrement())
    name      String?
    author    String?
    type      String?
    cover_url String?
    tags      String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@fulltext([name])
    @@fulltext([author])
    @@fulltext([type])
    @@fulltext([tags])
    @@fulltext([name, author])
    @@fulltext([name, type])
    @@fulltext([name, tags])
    @@fulltext([author, type])
    @@fulltext([author, tags])
    @@fulltext([type, tags])
    @@fulltext([name, author, type])
    @@fulltext([name, author, tags])
    @@fulltext([name, type, tags])
    @@fulltext([author, type, tags])
    @@fulltext([name, author, type, tags])
}

model Page {
    id                  Int      @id() @default(autoincrement())
    bookId              Int
    bookInfoContentId   String
    pagePreviewImageUrl String
    pageTitle           String
    pageDescription     String
    createdAt           DateTime @default(now())
    updatedAt           DateTime @updatedAt
}

model Coupon {
    id            Int      @id() @default(autoincrement())
    user_id       Int
    redeemed_date String?
    is_redeemed   Boolean
    price         Int
    book_id       Int
    coupon        String?
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
}

model UserBooks {
    id        Int      @id() @default(autoincrement())
    userId    Int
    bookId    Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Model {
    id               Int      @id() @default(autoincrement())
    book_id          Int
    model_source_url String?
    size             String
    model_name       String
    page_number      Int
    set_id           Int
    createdAt        DateTime @default(now())
    updatedAt        DateTime @updatedAt
}

model Set {
    id          Int      @id() @default(autoincrement())
    price       Int
    total_items Int
    set_name    String?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}
